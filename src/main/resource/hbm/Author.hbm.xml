<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="cn.lkxed.po.Author" table="author" catalog="gushiwen">
    <id name="id" type="string">
      <column name="id" length="32"/>
    </id>
    <property name="name" type="string">
      <column name="name" length="20"/>
    </property>
    <property name="brief" type="string">
      <column name="brief" length="1000"/>
    </property>
    <property name="portraitUrl" type="string">
      <column name="portrait_url" length="100"/>
    </property>
    <property name="dynasty" type="string">
      <column name="dynasty" length="6"/>
    </property>
  </class>
</hibernate-mapping>