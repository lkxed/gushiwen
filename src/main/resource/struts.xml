<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <package name="strutsBean" extends="json-default" namespace="/">
    <default-action-ref name="poems"/>
    <!-- 返回 JSON 格式数据 -->
    <action name="tags-json" class="tagAction">
      <result name="success" type="json">
        <param name="includeProperties">tags.*</param>
      </result>
    </action>
    <action name="poems-json" class="poemAction">
      <result name="success" type="json">
        <param name="includeProperties">poems.*</param>
      </result>
    </action>
    <action name="authors-json" class="authorAction">
      <result name="success" type="json">
        <param name="includeProperties">authors.*</param>
      </result>
    </action>
    <action name="register" class="userAction" method="register">
      <result name="success" type="json">
      </result>
      <result name="error" type="json">
      </result>
    </action>
    <!-- 返回 JSP 页面 -->
    <action name="poems" class="poemAction">
      <result name="success">recommend.jsp</result>
    </action>
    <action name="login" class="userAction" method="login">
      <result name="success">recommend.jsp</result>
    </action>
  </package>
</struts>